<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/begin">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/begin"
            android:layout_marginTop="3dp"
            android:layout_alignStart="@id/begin"
            android:id="@+id/end">
        </RelativeLayout>

        <TextView
            android:text="Название события"
            android:layout_toEndOf="@id/begin"
            android:layout_toStartOf="@id/edttsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/dlttsk"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_delete_24dp" />

        <Button
            android:id="@+id/edttsk"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_edit_24dp"
            android:layout_toStartOf="@id/dlttsk" />

    </RelativeLayout>

</android.support.v7.widget.CardView>