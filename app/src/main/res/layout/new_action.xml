<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

        <EditText
            android:id="@+id/name_of_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="text"
            android:hint="Название события"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/beginning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_of_act"
            android:layout_margin="10dp"
            android:text="Начало"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/begin_hour"
            android:layout_alignStart="@id/begin_hour"
            android:layout_alignRight="@id/begin_min"
            android:layout_alignEnd="@id/begin_min"
            android:layout_alignBaseline="@+id/begin_hour"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/begin_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/beginning"
            android:layout_alignBaseline="@id/beginning"
            android:layout_below="@+id/name_of_act"
            android:maxLength="2"
            android:hint="@string/default_time_value"
            android:textColorHint="@color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:background="@color/colorPrimaryLight"/>

        <TextView
            android:id="@+id/begin_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/begin_hour"
            android:layout_alignBaseline="@id/beginning"
            android:layout_below="@+id/name_of_act"
            android:layout_marginStart="3dp"
            android:maxLength="2"
            android:hint="@string/default_time_value"
            android:textColorHint="@color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:background="@color/colorPrimaryLight"/>

        <TextView
            android:id="@+id/end_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ending"
            android:layout_alignBaseline="@id/beginning"
            android:layout_below="@+id/name_of_act"
            android:layout_marginStart="10dp"
            android:maxLength="2"
            android:hint="@string/default_time_value"
            android:textColorHint="@color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:background="@color/colorPrimaryLight"/>

        <TextView
            android:id="@+id/end_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/beginning"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/end_hour"
            android:layout_below="@+id/name_of_act"
            android:maxLength="2"
            android:hint="@string/default_time_value"
            android:textColorHint="@color/transparent"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:background="@color/colorPrimaryLight"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/end_hour"
            android:layout_alignEnd="@id/end_min"
            android:layout_alignBaseline="@+id/end_hour"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/reset"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/end_hour"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_clear_24dp"/>

        <TextView
            android:id="@+id/ending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/beginning"
            android:layout_toEndOf="@id/btn1"
            android:layout_marginStart="30dp"
            android:text="Конец"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание события..."
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/beginning"
            android:layout_margin="10dp"
            android:inputType="textMultiLine"
            android:background="@color/colorPrimaryLight"
            android:maxLines="9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notif_title"
            android:text="Уведомления"
            android:layout_below="@id/description"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/save"
            android:layout_below="@id/notif_title"
            android:layout_margin="10dp"
            android:id="@+id/notif_cont">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/add"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_add_circle_outline_24dp"
            android:layout_alignTop="@id/notif_title"
            android:layout_toEndOf="@id/notif_title"/>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/cancel"
            android:text="@string/save"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/save"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginEnd="20dp"/>
</RelativeLayout>